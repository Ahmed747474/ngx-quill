{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": false,
    "inlineSourceMap": true,
    "noImplicitAny": true,
    "emitDecoratorMetadata": true,
    "noUnusedLocals": true,
    "outDir": "./dist",
    "declaration": true,
    "experimentalDecorators": true,
    "lib": ["es2016", "dom"],
    "suppressImplicitAnyIndexErrors": true
  },
  "type": [
    "quill",
    "jasmine",
    "node",
    "core-js"
  ],
  "files": [
    "index.ts",
    "./src/quill-editor.component.ts",
    "./src/quill.module.ts"
  ],
  "exclude": [
    "node_modules",
    "bundles",
    "aot",
    "dist"
  ],
  "angularCompilerOptions": {
    "strictMetadataEmit": true,
    "skipTemplateCodegen": true
  }
}
